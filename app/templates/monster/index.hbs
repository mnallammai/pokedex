<Input @type="text" @value={{this.query}} placeholder="Search"/> {{log this.searchItem}}
<div class="box-container">
    
    {{#each @model.results as |monster index|}}
        {{#if (search this.query monster.name)}}
        <div class="box-item">
            <ul>
                <li>
                    <LinkTo @route="monster.character" @model={{increment index}}>
                        <img src={{getImageUrl (increment index)}}/>
                        <span>{{monster.name}}</span>
                    </LinkTo>
                </li>
            </ul>
        </div> 
        {{/if}}
    {{/each}}
</div>